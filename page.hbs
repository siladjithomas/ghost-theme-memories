{{!< default}}

{{#post}}
    <div id="main">
        <header class="grid">
            <h1>{{title}}</h1>
        </header>

        <article class="{{post_class}}">
            {{content}}
        </article>
    </div>
{{/post}}


{{#contentFor 'scripts'}}
    <script src="{{asset 'built/post.js'}}" defer></script>
{{/contentFor}}
